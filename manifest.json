{
  "manifest_version": 2,
  "name": "Speed Reader for Android",
  "version": "1.0",
  "description": "Ein Speed-Reader-Add-on f√ºr Firefox Android",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Speed Reader"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
